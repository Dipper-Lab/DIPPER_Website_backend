generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id               String        @id @default(uuid())
  fname            String
  lname            String
  otherNames       String?
  email            String
  title            String
  program          String
  labPosition      String
  academicPosition String
  image            String
  about            String
  publications     Publication[]
  projects         Project[]
  events           Event[]
}

model Project {
  id           String    @id @default(uuid())
  title        String
  contributors Member[]
  sponsors     Sponsor[]
  funding      Float
  currency     String
  startDate    DateTime
  endDate      DateTime
  description  String
  image        String
}

model Publication {
  id              String   @id @default(uuid())
  title           String
  authors         Member[]
  link            String
  publicationDate DateTime
  abstract        String
  image           String
}

model Sponsor {
  id       String    @id @default(uuid())
  name     String
  image    String
  projects Project[]
}

model Event {
  id       String   @id @default(uuid())
  title    String
  location String
  link     String
  date     DateTime
  time     DateTime
  speakers Member[]
  writeUp  String
  images   String
}
