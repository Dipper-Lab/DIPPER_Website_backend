generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id               String        @id @default(uuid())
  fname            String
  lname            String
  otherNames       String?
  email            String
  title            String
  program          String
  labPosition      String
  academicPosition String
  image            String
  about            String
  publications     Publication[]
  projects         Project[]
  events           Event[]
}

model Project {
  id                   String    @id @default(uuid())
  title                String
  contributors         Member[]
  non_lab_contributors String[]
  sponsors             Sponsor[]
  funding              Float
  currency             String
  startDate            DateTime
  endDate              DateTime
  description          String
  image                String
  createdAt            DateTime
}

model Publication {
  id              String   @id @default(uuid())
  title           String
  authors         Member[]
  non_lab_authors String[]
  link            String
  publicationDate DateTime
  abstract        String
  image           String
  createdAt       DateTime
}

model Sponsor {
  id       String    @id @default(uuid())
  name     String
  image    String
  url      String
  projects Project[]
}

model Event {
  id               String   @id @default(uuid())
  title            String
  location         String
  link             String
  date             DateTime
  speakers         Member[]
  non_lab_speakers String[]
  writeUp          String
  images           String[]
}

model About {
  id          String @id @default(uuid())
  description String
  mission     String
  themes      Json[]
  objectives  Json[]
}

model contact {
  id       String @id @default(uuid())
  phone    String
  email    String
  facebook String
  twitter  String
}

model admin {
  id       String @id @default(uuid())
  email    String
  password String
}
